# Backend ENV example (Railway/production)

# Database
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# Auth
SESSION_SECRET="change-me-strong-random"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://userhythm.kr/api/auth/google/callback"
# Railway 도메인만 쓸 경우 예: https://<your-railway>.up.railway.app/api/auth/google/callback

# Admin API (차트 승인/펜딩/상태 변경용)
ADMIN_TOKEN="set-admin-token-if-used"

# Runtime
NODE_ENV="production"
PORT=3000 # Railway는 PORT를 주입하므로 필요 없으면 제거 가능

# Prisma (binary/library 강제)
PRISMA_CLIENT_ENGINE_TYPE="library"
PRISMA_GENERATE_ENGINE="library"
PRISMA_CLI_QUERY_ENGINE_TYPE="binary"
PRISMA_CLI_QUERY_ENGINE_BINARY_TARGETS="native"

